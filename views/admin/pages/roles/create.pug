extends ../../layouts/default.pug

block main
  h1.mb-4 Thêm mới nhóm quyền

  form(action=`${prefixAdmin}/roles/create`, method="POST")
    .form-group
      label(for="title") Tiêu đề
      input#title.form-control(type="text", name="title", required, placeholder="Nhập tiêu đề...")

    .form-group
      label(for="description") Mô tả
      textarea#description.form-control(name="description", rows="5", placeholder="Nhập mô tả...")

    .form-group
      button.btn.btn-primary(type="submit") Tạo mới
      a.btn.btn-danger.ml-2(href=`${prefixAdmin}/roles`) Quay lại
