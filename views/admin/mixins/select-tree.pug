mixin select-tree(products, level = 1, selected = "")
  each item in products
    - const prefix = Array(level + 1).join("-- ");
    option(value=item.id, selected=item.id.toString() === selected.toString()) #{ prefix } #{ item.title }

    if item.children && item.children.length > 0
      +select-tree(item.children, level + 1, selected)
