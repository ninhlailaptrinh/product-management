mixin sort()
  .col-4
    div(sort)
      select(
        class="form-control"
        name="sort"
        sort-select
      )
        option(value="position-desc") Vị trí tăng dần
        option(value="position-asc") Vị trí giảm dần
        option(value="price-desc") Giá tăng dần
        option(value="price-asc" selected=true) Giá giảm dần
        option(value="title-asc") Tiêu đề A - Z
        option(value="title-desc") Tiêu đề Z - A
      button(
        class="btn btn-danger mt-2"
        sort-clear
      ) Clear
