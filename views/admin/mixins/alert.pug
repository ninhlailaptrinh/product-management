mixin alert-ok(time)
  if message && message.length > 0
    .alert.alert-success(show-alert, data-time=time, close-alert) #{ message }
  if messages.error && messages.error.length > 0
    .alert.alert-danger(show-alert, data-time=time) #{ messages.error }

mixin alert-err(time)
  if messages && messages.error
    - const errors = Array.isArray(messages.error) ? messages.error : [messages.error];
    each error in errors
      .alert.alert-danger(show-alert, data-time=time, close-alert) #{ error }
